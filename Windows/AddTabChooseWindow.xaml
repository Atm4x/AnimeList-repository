<Window x:Class="AnimeList.Windows.AddTabChooseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:AnimeList.Windows"
        mc:Ignorable="d"
        Title="AniList: Добавить список" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" MaxWidth="400" Height="200" MaxHeight="300" Background="{DynamicResource TabActiveBrush}">
    <Grid x:Name="WholePageGrid">
        <StackPanel>
            <Border Background="{DynamicResource MidBrsh}" Margin="10">
                <Button Name="CreateNewListButton" Content="Создать список" Background="Transparent" Padding="10" Click="AddClick"></Button>
            </Border>

            <Border Background="{DynamicResource MidBrsh}" Margin="10">
                <Button Name="OpenListButton" Content="Открыть существующий" Background="Transparent" Click="ChooseClick" Padding="10" ></Button>
            </Border>
        </StackPanel>
    </Grid>
</Window>
