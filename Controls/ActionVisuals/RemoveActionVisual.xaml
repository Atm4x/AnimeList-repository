<Border x:Class="AnimeList.Controls.ActionVisuals.RemoveActionVisual"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimeList.Controls.ActionVisuals"
        mc:Ignorable="d" Background="Black">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <Path Data="M 2.5 2.5 L 22.5 2.5 L 20.5 4.5 L 2.5 4.5 Z" Stroke="Red" Margin="0 0 5 0" StrokeThickness="1.6" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock x:Name="Place" Foreground="White" Text="0." Margin="5 0 5 0"/>
            <TextBlock x:Name="Name" Foreground="White" Text="Вероятно крутое аниме" Margin="5 0 5 0"/>
        </StackPanel>
    </Grid>
</Border>
