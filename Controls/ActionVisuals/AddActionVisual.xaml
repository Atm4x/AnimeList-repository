<Border x:Class="AnimeList.Controls.ActionVisuals.AddActionVisual"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnimeList.Controls.ActionVisuals"
        mc:Ignorable="d" Background="Black">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <Path Data="M24 10h-12v-10h-4v10h-10v4h10v10h4v-10h10z" Stroke="Lime" Margin="0 0 5 0" StrokeThickness="3" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <TextBlock x:Name="Place" Foreground="White" Text="0." Margin="5 0 5 0"/>
            <TextBlock x:Name="Name" Foreground="White" Text="Невероятно крутое аниме" Margin="5 0 5 0"/>
        </StackPanel>
    </Grid>
</Border>
